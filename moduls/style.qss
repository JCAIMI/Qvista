    background-color: #F9F9F9 transparent;
    color: #38474F;
    margin: 0px;
    border: 0px;
}

QvPushButton:checked{
    background-color: #DDDDDD;
    color: #38474F;
	border: 0px;
	padding: 2px 2px;
} 

QvToolButton {
	background-color: transparent;
	color: #38474F;
	border: 0px;
	padding: 1px 1px;
}

QStatusBar {
    background-color: #DDDDDD;
}

