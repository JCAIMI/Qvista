QWidget #layoutFosc {
    background: solid;
    background-color: #38474F; 
    border: 0px;
}
QWidget #layout {
    background: transparent;
    border: 0px;
}

QFrame {
    background-color: #F9F9F9 transparent;
}

QScrollBar {
    background: #DDDDDD;
    margin: 0px;
    border: 0px;
}
QScrollBar::handle {
    background: #DDDDDD;
    min-height: 0px;
    border: 0px;
}
QScrollBar::sub-page {
    background: #F9F9F9;
    height: 0 px;
    border: 0px;
}
QScrollBar::add-page {
    background: #F9F9F9;
    height: 0 px;
    border: 0px;
}

QLabel {
    background-color: #F9F9F9 transparent;
    color: #38474F;
    margin: 1px;
}

QLabel#fosca{
    background-color: #38474F solid;
    color: #F9F9F9;
    border: 1px;
}

QMenuBar {
    color: #79909B; 
    background-color : #38474F; 
    /*selection-background-color : #444444;*/
}

QLineEdit {
    border: 1px solid #79909B; 
    background-color: white;
}

QTextEdit[readOnly="true"] {
    border:0; 
    background-color: #F9F9F9;
}

QTextEdit {
    border:0px;
    background-color: white;
}

QComboBox {
    border: 1px solid #38474F;
	color: #38474F;
	background-color: #465A63;
	selection-background-color: #FF6215;
	outline: 0;
}

QComboBox QAbstractItemView {
    background-color: #465A63;
    /*selection-background-color: transparent;*/
    outline: 0;
    border: 1px solid #38474F;
}

QTableView {
    background-color: solid white;
    selection-background-color: #FF6215;
    color: #38474F;
    border: 1px solid #38474F;
}

QTableView::item {
    background-color: solid white;
}

QTableView QTableCornerButton::section {
    background-color: solid white;
    border: 0px;
}
